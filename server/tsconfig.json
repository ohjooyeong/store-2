{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "baseUrl": "./src",
    "paths": {
      "/*": ["/*"]
    },
  },
  "exclude": ["**/dist/**", "**/node_modules/**"],
}
